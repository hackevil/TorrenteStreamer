extend default

block content
  div.torrent
    form(enctype='multipart/form-data', method='POST', action='/upload')
      ul
        li: label Torrent file
        li: input(type='file', id='torrent', name='torrent')
        li: input(type='range', name='quality', min='400', max='2000', value='800')
        li: button(class="send-button") Send

  div.magnet
    form(method='POST', action='/upload')
      ul
        li: label Magnet link
        li: input(type='text', id='magnet', name='magnet')
        li: input(type='range', name='quality', min='400', max='2000', value='800')
        li: button(class="send-button") Send

block js
  script.
    document.addEventListener('paste', function(e) {
      e.stopPropagation(); e.preventDefault();
      document.getElementById("magnet").value = (e.clipboardData || window.clipboardData).getData('Text')
    });